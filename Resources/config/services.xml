<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="zeichen32_gitlabapi.api.issue.class">GitLab\Api\IssueApi</parameter>
        <parameter key="zeichen32_gitlabapi.api.user.class">GitLab\Api\UserApi</parameter>
        <parameter key="zeichen32_gitlabapi.client.class">GitLab\Client</parameter>
        <parameter key="zeichen32_gitlabapi.browser.class">Buzz\Browser</parameter>
    </parameters>

    <services>
       <service id="zeichen32_gitlabapi.browser" class="%zeichen32_gitlabapi.browser.class%" public="false"/>
       <service id="zeichen32_gitlabapi.client" class="%zeichen32_gitlabapi.client.class%" public="false">
           <argument type="service" id="zeichen32_gitlabapi.browser" />
           <argument type="string">%zeichen32_gitlabapi.config.token%</argument>
           <argument type="string">%zeichen32_gitlabapi.config.url%</argument>
       </service>

        <service id="zeichen32_gitlabapi.api.issue" class="%zeichen32_gitlabapi.api.issue.class%" public="false">
            <argument type="service" id="zeichen32_gitlabapi.client" />
        </service>

        <service id="zeichen32_gitlabapi.api.user" class="%zeichen32_gitlabapi.api.user.class%" public="false">
            <argument type="service" id="zeichen32_gitlabapi.client" />
        </service>

        <service id="gitlab_api.issues" alias="zeichen32_gitlabapi.api.issue" />
        <service id="gitlab_api.user" alias="zeichen32_gitlabapi.api.user" />
        <service id="gitlab_api" alias="zeichen32_gitlabapi.client" />
    </services>
</container>
